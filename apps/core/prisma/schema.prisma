datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// generator nexusPrisma {
//    provider = "nexus-prisma"
// }

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "windows"]
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Platform {
  id        String     @id @default(cuid())
  name      String

  Software  Software[]
  // @@unique([name, released], name: "Platform_name_released_unique_constraint")
}

model Software {
  id         String     @id @default(cuid())
  title      String

  Games      Game[]
  Platforms  Platform[]
  Locations  Location[]
}

model Location {
  id        String @id @default(cuid())
  uri       String @unique

  fileId    String?
  File      File?   @relation(fields: [fileId], references: [id])

  Software  Software[]
}

model File {
  id        String @id @default(cuid())
  crc32     String? @unique
  md5       String? @unique
  sha512    String? @unique
  sha256    String? @unique
  sha1      String? @unique
  size      Int? 

  successorId String?
  successor   File?   @relation("FileSequence", fields: [successorId], references: [id])
  predecessor File?   @relation("FileSequence")

  Locations   Location[]
}

model Game {
  id         String    @id @default(cuid())
  name       String

  Software   Software[]
}
