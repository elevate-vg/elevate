{
   "name": "@elevate/root",
   "private": true,
   "workspaces": [
      "apps/*",
      "libs/*",
      "plugins/*",
      "themes/*"
   ],
   "engines": {
      "node": "^14.16"
   },
   "scripts": {
      "dev": "NODE_ENV=\"development\" yarn lerna exec --scope \"@elevate/core\" yarn dev",
      "test:watch": "jest --watch",
      "bootstrap": "lerna bootstrap",
      "build": "lerna run build --stream",
      "assets": "node ./build/download-node",
      "package": "node ./build/package",
      "make": "yarn build && yarn assets && yarn package"
   },
   "dependencies": {
      "ramda": "0.27.1"
   },
   "devDependencies": {
      "@babel/preset-env": "^7.14.7",
      "@babel/preset-typescript": "^7.14.5",
      "@types/jest": "^26.0.24",
      "@types/ramda": "^0.27.44",
      "archiver": "^5.3.0",
      "eslint-plugin-jest": "24.3.6",
      "jest": "^27.0.6",
      "lerna": "^4.0.0",
      "tar-stream": "^2.2.0",
      "unzipper": "^0.10.11"
   }
}
